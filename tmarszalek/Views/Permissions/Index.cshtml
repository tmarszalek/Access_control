<link rel="stylesheet" href="../../../Content/bootstrap.css" />
<link rel="stylesheet" href="../../../Content/font-awesome.css" />

<h2 style="text-align: center">@ViewData["Text"]</h2>

<div id="box">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Sukces!</strong> @ViewBag.Message
        </div>
    }

<form method="post" action="@Url.Action("Create", "Permissions")">
  <div class="form-group">
    <label for="user">Użytkownik</label>
      <select class="form-control" id="user">
          <option selected>- - - - -</option>
          @foreach (var user in Model.Users)
          {
              <option value="@user.ID">@user.Name @user.Surname (@user.Number)</option>
          }
    </select>
  </div>
  <div class="form-group">
    <label for="room">Pomieszczenie</label>
    <select class="form-control" id="room">
        <option selected>- - - - -</option>
        @foreach (var room in Model.Rooms)
        {
            <option value="@room.ID">@room.Name</option>
        }
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Przypisz uprawnienie</button>
</form>
</div>


<style>
    body {
        margin: auto;
        padding: auto;
    }

    #box {
        margin: auto;
        align-content: center;
        width: 80%;
        height: 200px;
        display: flex;
        flex-direction: row;
        margin-bottom: 200px;
        justify-content: space-between;
    }
    form{
        margin: auto;
    }
</style>
